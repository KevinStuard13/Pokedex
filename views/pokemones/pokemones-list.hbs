<main>
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <div class="card-body">
          
            <h1>Pokemones</h1>
            <a href="/create-pokemones" class="btn btn-primary my-2">
              AÃ±adir un nuevo pokemon
            </a>
          
        </div>
      </div>

      <div class="col-md-6">
        <div class="row row-cols-0 row-cols-md-6 g-0">

          <div class="col-md-4">
            <h5 for="validationCustom01" class="form-label"> Nombre del
              Pokemon</h5>
            <input type="text" class="form-control" id="validationCustom01" style="display: inline;"/>
          </div>

          <div class="card-body">
            <div class="col-mb-8">
              <button class="btn btn-primary" type="submit">Buscar</button>
            </div>
          </div><div></div>

          <div class="col-md-4">
            <h5 for="validationCustom01" class="form-label">Region del
              Pokemon</h5>
            <input type="text" class="form-control" id="validationCustom01" style="display: inline;"/>
          </div>
          <div class="card-body">
            <div class="col-mb-5">
              <button class="btn btn-primary" type="submit">Buscar</button>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-md-2 g-0">

        {{#each pokemones as |pokemo|}}

        <div class="card mb-3">
          <div class="row g-0">

            <div class="col-md-4">
              <img src="{{pokemo.imagenes}}" class="img-fluid rounded-start" alt="..." />
              <div class="card-body">
                <div class="card-body">
                  <h5 class="card-text text-muted"><strong>Tipo</strong></h5>
                  <a>{{pokemo.tipos}}</a>
                </div>
                <div class="card-body">
                  <h5 class="card-text text-muted"><strong>Region</strong></h5>
                  <a>{{pokemo.regiones}}</a>
                </div>
              </div>
            </div>

            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-header">{{pokemo.name}}</h5>
                <div class="card-body">
                  <p class="card-text">{{pokemo.descripcion}}</p>

                  <a href="/edit-pokemones/{{pokemo.id}}?edit=true" class="btn btn-warning">Editar</a>

                  <form class="form-inline" action="/delete-pokemones" method="post">
                    <input type="hidden" name="pokemonesId" value="{{pokemo.id}}" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>

                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</main>