<div class="row">

    <div class="col-md-3"></div>
    <div class="col-md-6">

        <div class="card">
            <div class="card-header bg-dark text-white">
                {{#if editMode}}Edicion{{else}}Creacion{{/if}} de regiones
            </div>
            <div class="card-body">

                <form method="POST" action="{{#if editMode}}/edit-regiones{{else}}/create-regiones{{/if}}">
                                    
                    <div class="mb-3">
                        <label for="region" class="form-label">Region:</label>
                        <input type="text" class="form-control" id="region" name="Region"
                            value="{{#if editMode}}{{region.regiones}}{{/if}}" />
                    </div>

                    

                    {{#if editMode}}

                    <input type="hidden" name="regionId" value="{{region.id}}">

                    {{/if}}

                    <button type="submit" class="btn btn-primary">{{#if editMode}}editar{{else}}Crear{{/if}}</button>
                    <a href="/regiones" type="button" class="btn btn-warning">Regiones</a>
                    <a href="/" type="button" class="btn btn-warning">Home</a>
                </form>

            </div>
        </div>

    </div>
    <div class="col-md-6"></div>

</div>